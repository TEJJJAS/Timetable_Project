@{
    var batch = ViewBag.Batch ?? "BPharm-A";
    var timeSlots = new[] { "09:00 - 10:00", "10:00 - 11:00", "11:00 - 12:00", "14:00 - 15:00", "15:00 - 16:00" };
    var days = new[] { "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday" };
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Timetable - @batch</title>
    <!-- Use Url.Content to resolve paths correctly -->
    <link rel="stylesheet" href="@Url.Content("~/bootstrap/bootstrap-5.3.3-dist/css/bootstrap.css")" />
    <style>
        body {
            font-family: Arial,sans-serif;
            background-color: #f4f6f9;
        }

        .timetable-cell {
            border: 2px dashed #ccc;
            border-radius: 4px;
            min-height: 80px;
            display: flex;
            justify-content: center;
            align-items: center;
            cursor: pointer;
            transition: 0.2s;
            text-align: center;
        }

            .timetable-cell:hover {
                background-color: #f0e6ff;
            }
    </style>
</head>
<body>
    <div class="container my-5">
        <h4 class="text-center text-primary mb-4">📘 Timetable for @batch</h4>

        <div class="table-responsive shadow rounded bg-white p-3" style="max-height:80vh; overflow:auto;">
            <div class="d-grid" style="grid-template-columns:120px repeat(6,1fr); gap:4px;">
                <div class="p-2 bg-light fw-bold border rounded text-center">Time</div>
                @foreach (var day in days)
                {
                    <div class="p-2 bg-light fw-bold border rounded text-center">@day</div>
                }

                @foreach (var time in timeSlots)
                {
                    <div class="p-2 bg-light border rounded text-center fw-medium">@time</div>
                    @for (int i = 0; i < days.Length; i++)
                    {
                        <div class="timetable-cell" data-day-index="@i" data-time="@time">
                            Click to add
                        </div>
                    }
                }
            </div>
        </div>
    </div>

    <!-- Slot Modal -->
    <div class="modal fade" id="slotModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content rounded-4">
                <div class="modal-header bg-light">
                    <h5 class="modal-title fw-bold text-primary">Add / Edit Slot</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="slotForm">
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Subject</label>
                            <input type="text" class="form-control" id="subjectInput" placeholder="Enter subject" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Description</label>
                            <textarea class="form-control" id="descInput" placeholder="Details..."></textarea>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold">Day</label>
                                <input type="text" class="form-control" id="dayInput" readonly />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold">Time</label>
                                <input type="text" class="form-control" id="timeInput" readonly />
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Color</label>
                            <input type="color" class="form-control form-control-color" id="colorInput" value="#e6e0ff" />
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button class="btn btn-primary" id="saveSlotBtn">Save Slot</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="@Url.Content("~/bootstrap/bootstrap-5.3.3-dist/js/bootstrap.bundle.js")"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            let currentCell = null;
            const days = ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'];

            const cells = document.querySelectorAll('.timetable-cell');
            cells.forEach(cell => {
                cell.addEventListener('click', function () {
                    currentCell = cell;
                    const dayIndex = cell.dataset.dayIndex;
                    const time = cell.dataset.time;

                    document.getElementById('dayInput').value = days[dayIndex];
                    document.getElementById('timeInput').value = time;
                    document.getElementById('subjectInput').value = '';
                    document.getElementById('descInput').value = '';
                    document.getElementById('colorInput').value = '#e6e0ff';

                    new bootstrap.Modal(document.getElementById('slotModal')).show();
                });
            });

            document.getElementById('saveSlotBtn').addEventListener('click', function () {
                const subject = document.getElementById('subjectInput').value.trim();
                const desc = document.getElementById('descInput').value.trim();
                const color = document.getElementById('colorInput').value;

                if (!subject) { alert("Please enter a subject!"); return; }

                currentCell.innerHTML = `<div><strong>${subject}</strong><br><small class="text-muted">${desc}</small></div>`;
                currentCell.style.backgroundColor = color;
                currentCell.style.color = "#4b0082";
                currentCell.style.fontWeight = "500";

                const modal = bootstrap.Modal.getInstance(document.getElementById('slotModal'));
                modal.hide();
            });
        });
    </script>
</body>
</html>
