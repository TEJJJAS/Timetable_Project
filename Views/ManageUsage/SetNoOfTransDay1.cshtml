@model CardTransactionModel

<h1 style="text-align: center;">Updated Transaction Limit</h1>

<div style="border: 1px solid #ccc; padding: 20px; margin-bottom: 20px; background-color: #f9f9f9;  margin: 0 auto;">
    <div style="margin-bottom: 10px;">
        <label style="font-weight: bold; width: 150px;">Card Number:</label>
        <span>@Model.CardNo</span>
    </div>
    <div style="margin-bottom: 10px;">
        <label style="font-weight: bold; width: 150px;">Card Holder Name:</label>
        <span>@Model.CardholderName</span>
    </div>
    <div style="margin-bottom: 10px;">
        <label style="font-weight: bold; width: 150px;">Bank Name:</label>
        <span>@Model.BankName</span>
    </div>
    <div style="margin-bottom: 10px;">
        <label style="font-weight: bold; width: 150px;">ExpiryDate:</label>
        <span>@Model.ExpiryDate</span>
    </div>
    <div style="margin-bottom: 10px;">
        <label style="font-weight: bold; width: 150px;">Available Credit Limit:</label>
        <span>@Model.AvailableCreditLimit</span>
    </div>
    <div style="margin-bottom: 10px;">
        <label style="font-weight: bold; width: 150px;">No Of Transaction Per Day:</label>
        <span>@Model.NoOfTransPerDay</span>
    </div>
</div>

<div style="text-align: center; margin-top: 20px;">
    <a asp-action="CreditCardDetails" asp-route-id="@Model.CardNo" class="btn btn-primary" style="color: white; background-color: #007bff;  border-radius: 5px;">Back to List</a>
</div>

<p>@ViewData["Message"]</p>


