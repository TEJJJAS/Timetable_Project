@model IEnumerable<CreditCard>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Read</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #4CAF50;
            color: white;
        }
    </style>
</head>
<body>
    <h2>Credit Card Details</h2>
    <table>
        <tr>
            <th>Card No</th>
            <th>Cardholder Name</th>
            <th>Bank Name</th>
            <th>CVV</th>
            <th>Expiry Date</th>
            <th>Card Pin</th>
            <th>Available Credit Limit</th>
            @* <th>Set Limit</th>
            <th>Update Limit</th> *@
        </tr>
        @foreach (var card in Model)
        {
            <tr>
                <td>@card.CardNo</td>
                <td>@card.CardholderName</td>
                <td>@card.BankName</td>
                <td>@card.Cvv</td>
                <td>@card.ExpiryDate</td>
                <td>@card.CardPin</td>
                <td>@card.AvilableCreditLimit</td>
               @*  <td>
                    <form>
                        <input type="hidden" name="cardNo" value="@card.CardNo" />
                        <input type="number" name="availableCreditLimit" step="10" placeholder="New Limit" required />
                       
                    </form>
                </td>
                <td>
                    <button> @Html.ActionLink("Update Credit Limit", "SetLimit")</button>

                </td> *@
            </tr>
        }
    </table>
   
    <div style="text-align: center; margin-top: 20px;">
        <a asp-controller="Home" asp-action="MainPage" class="btn btn-primary">Back to Dashboard</a>
    </div>
</body>
</html>
