@model List<Attendance>

@{
    ViewData["Title"] = "Attendance";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Attendance</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            padding: 20px;
            background-color: #f7f7f7;
        }

        .filter-box {
            background: #fff;
            padding: 15px;
            border-radius: 6px;
            box-shadow: 0 0 6px rgba(0,0,0,0.1);
            margin-bottom: 20px;
        }

        table {
            background: #fff;
        }

        th {
            background: #0d6efd;
            color: white;
            text-align: center;
        }

        td {
            text-align: center;
        }

        .summary-box {
            background: #fff;
            padding: 15px;
            border-radius: 6px;
            margin-top: 15px;
            box-shadow: 0 0 6px rgba(0,0,0,0.1);
        }

    </style>
</head>
<body>

    <h2 class="mb-4">Attendance</h2>

    <!-- FILTERS -->
    <div class="filter-box">
        <form method="get" asp-action="Index" asp-controller="Attendance">
            <div class="row">
                <div class="col-md-3">
                    <label>From Date</label>
                    <input type="date" name="fromDate" class="form-control" />
                </div>

                <div class="col-md-3">
                    <label>To Date</label>
                    <input type="date" name="toDate" class="form-control" />
                </div>

                <div class="col-md-3">
                    <label>Status</label>
                    <select name="status" class="form-control">
                        <option value="">All</option>
                        <option value="Present">Present</option>
                        <option value="Absent">Absent</option>
                        <option value="Leave">Leave</option>
                    </select>
                </div>

                <div class="col-md-3 mt-4">
                    <button type="submit" class="btn btn-primary mt-2">Filter</button>
                </div>
            </div>
        </form>
    </div>

    <!-- TABLE -->
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>Day</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Date.ToString("dd-MMM-yyyy")</td>
                        <td>@item.Date.ToString("dddd")</td>
                        <td>@item.Status</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center text-danger">No attendance records found</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- SUMMARY -->
    <div class="summary-box">
        <p><strong>Total Present:</strong> @ViewBag.TotalPresent</p>
        <p><strong>Total Absent:</strong> @ViewBag.TotalAbsent</p>
        <p><strong>Total Leave:</strong> @ViewBag.TotalLeave</p>
    </div>

</body>
</html>
