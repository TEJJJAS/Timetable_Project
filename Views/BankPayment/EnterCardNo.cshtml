@model CreditCardProj.Models.creditcombine



<!DOCTYPE html>
<html lang="en">
<head>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css">
    <style>
        .card {
            border: 2px solid #e3e3e3;
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #007bff;
            color: #fff;
            border-bottom: 2px solid #0056b3;
        }

        .btn-custom {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-custom:hover {
                background-color: #0056b3;
                border-color: #004a9f;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="card">
            <div class="card-header">
                Enter Card Number
            </div>
            <div class="card-body">
                <form asp-action="EnterCardNo" method="post">
                    <div class="mb-4">
                        <label for="cardNo">Enter Your Card Number</label>
                        <input type="number" name="cardNo" id="cardNo" />
                        <span asp-validation-for="@Model.CardNo" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-custom btn w-20">Submit</button>
                </form>
            </div>
        </div>
    </div>

</body>
</html>



